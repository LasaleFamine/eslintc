{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "target": "ES2018",
    "module": "ESNext",
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "*.js",
    "*.mjs",
    ".eslintrc.js",
    "rules/**/*.js",
    "rules/**/*.mjs",
    "__tests__/**/*.js",
    "__tests__/**/*.mjs"
  ]
}
